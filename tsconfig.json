{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "*": ["src/types/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["./src/legacy/**/*", "node_modules/.pnpm/**/*"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
}
