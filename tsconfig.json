{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2018",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["./src/**/*", "./src/index.ts"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
}
