{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": ".",
        "paths": {
            "*": ["./types/*"]
        }
    },
    "include": ["./**/*"],
    "exclude": ["node_modules/.pnpm/**/*"],
    "typeRoots": ["./node_modules/@types", "./types"]
}
